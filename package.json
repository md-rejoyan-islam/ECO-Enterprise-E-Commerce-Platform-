{
  "name": "ecommerce-with-typescript",
  "version": "1.0.0",
  "description": "Full Stack Ecommerce Application using TypeScript, Node.js, Express, and MongoDB",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "seed": "ts-node src/data/seed.ts",
    "seed:json": "ts-node src/data/json-seeder.ts",
    "format": "prettier --check src",
    "format:fix": "prettier --write src",
    "lint": "eslint src ",
    "lint:fix": "eslint src --fix",
    "prepare": "husky"
  },
  "keywords": [
    "ecommerce",
    "typescript",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Md Rejoyan Islam",
  "authorEmail": "rejoyanislam0014@gmail.com",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@eslint/js": "^9.38.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "prom-client": "^15.1.3",
    "redis": "^5.8.3",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-loki": "^6.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/http-errors": "^2.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.0",
    "@types/nodemailer": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
